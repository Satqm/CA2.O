        // ====================
        // INITIALIZATION
        // ====================
        document.addEventListener('DOMContentLoaded', function() {
            // Set today's date in inputs
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('start-date').value = today;
            document.getElementById('target-date').value = today;
            
            // Check for valid license
            checkLicense();
        });
        
        function checkLicense() {
            const licenseData = DataStorage.load('license');
            
            if (!licenseData) {
                // Show license screen
                licenseContainer.style.display = 'flex';
                appContainer.style.display = 'none';
                return;
            }
            
            const validation = LicenseSystem.validateLicense(licenseData.key);
            
            if (!validation.valid) {
                // Invalid or expired license
                licenseContainer.style.display = 'flex';
                appContainer.style.display = 'none';
                licenseKeyInput.value = licenseData.key;
                showLicenseMessage('License expired or invalid. Please renew.', 'error');
                return;
            }
            
            // Valid license
            currentUser = validation.data;
            licenseContainer.style.display = 'none';
            appContainer.style.display = 'block';
            
            // Initialize app
            setupEventListeners();
            loadUserData();
            setupNotifications();
        }
        
        function setupEventListeners() {
            // License activation
            activateBtn.addEventListener('click', activateLicense);
            licenseKeyInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') activateLicense();
            });
            
            // Navigation
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const pageId = link.getAttribute('data-page');
                    
                    navLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');
                    
                    pages.forEach(page => page.classList.remove('active'));
                    document.getElementById(`${pageId}-page`).classList.add('active');
                    
                    if (pageId === 'subjects') {
                        loadSubjectContent();
                    } else if (pageId === 'dashboard') {
                        updateDashboard();
                    } else if (pageId === 'planning') {
                        loadPlanningPage();
                    } else if (pageId === 'videos') {
                        loadVideos();
                    } else if (pageId === 'resources') {
                        loadResources();
                    }
                });
            });
            
            // User menu
            document.getElementById('user-menu-btn').addEventListener('click', () => {
                document.getElementById('user-dropdown').classList.toggle('active');
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', (e) => {
                if (!e.target.closest('.user-menu')) {
                    document.getElementById('user-dropdown').classList.remove('active');
                }
            });
            
            // Data management
            exportBtn.addEventListener('click', exportUserData);
            importBtn.addEventListener('click', () => {
                document.getElementById('import-modal').classList.add('active');
            });
            
            deleteEntryBtn.addEventListener('click', () => {
                document.getElementById('delete-entry-modal').classList.add('active');
                loadDeleteEntries('targets');
            });
            
            resetAppBtn.addEventListener('click', resetApp);
            
            // Study plan
            targetToggle.addEventListener('click', () => {
                targetContent.classList.toggle('expanded');
                const icon = targetToggle.querySelector('i');
                icon.classList.toggle('fa-chevron-down');
                icon.classList.toggle('fa-chevron-up');
            });
            
            updateTargetBtn.addEventListener('click', () => {
                targetContent.classList.add('expanded');
                const icon = targetToggle.querySelector('i');
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            });
            
            calculatePlanBtn.addEventListener('click', calculateStudyPlan);
            savePlanBtn.addEventListener('click', saveStudyPlan);
            resetPlanBtn.addEventListener('click', resetStudyPlan);
            
            // Progress filters - Updated to filter KPIs
            progressFilters.forEach(filter => {
                filter.addEventListener('click', () => {
                    progressFilters.forEach(f => f.classList.remove('active'));
                    filter.classList.add('active');
                    currentSubjectFilter = filter.getAttribute('data-filter');
                    updateDashboard();
                    updateSubjectFilteredKPIs();
                });
            });
            
            // Chart type buttons
            chartTypeBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    chartTypeBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    currentChartType = btn.getAttribute('data-chart');
                    updateChart();
                });
            });
            
            // Subjects
            subjectSelect.addEventListener('change', loadSubjectContent);
            saveAllProgressBtn.addEventListener('click', saveAllProgress);
            
            // Planning
            planningToggle.addEventListener('click', () => {
                planningToggle.classList.toggle('expanded');
                planningForm.classList.toggle('expanded');
            });
            
            document.getElementById('planning-subject').addEventListener('change', loadTopicsForPlanning);
            document.getElementById('planning-topic').addEventListener('change', loadSubtopicsForPlanning);
            document.getElementById('save-target-btn').addEventListener('click', saveTarget);
            document.getElementById('target-status-filter').addEventListener('change', loadTargets);
            document.getElementById('target-subject-filter').addEventListener('change', loadTargets);
            document.getElementById('search-history').addEventListener('input', loadTargetHistory);
            
            // Videos
            document.getElementById('video-toggle').addEventListener('click', () => {
                document.getElementById('video-toggle').classList.toggle('expanded');
                document.getElementById('video-form').classList.toggle('expanded');
            });
            document.getElementById('add-video-btn').addEventListener('click', addVideo);
            document.getElementById('search-videos').addEventListener('input', searchVideos);
            
            // Resources
            document.getElementById('resources-toggle').addEventListener('click', () => {
                document.getElementById('resources-toggle').classList.toggle('expanded');
                document.getElementById('resources-form').classList.toggle('expanded');
            });
            document.getElementById('add-resources-btn').addEventListener('click', addResource);
            document.getElementById('search-resources').addEventListener('input', searchResources);
            
            // Data backup
            backupAllBtn.addEventListener('click', backupAllData);
            restoreBackupBtn.addEventListener('click', () => backupFile.click());
            backupFile.addEventListener('change', restoreBackupData);
            
            // Modals
            document.getElementById('import-close').addEventListener('click', () => {
                document.getElementById('import-modal').classList.remove('active');
            });
            
            document.getElementById('delete-entry-close').addEventListener('click', () => {
                document.getElementById('delete-entry-modal').classList.remove('active');
            });
            
            document.getElementById('confirm-delete-btn').addEventListener('click', deleteSelectedEntries);
            
            // Entry type selector
            document.querySelectorAll('.entry-type-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.entry-type-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    const type = this.getAttribute('data-type');
                    loadDeleteEntries(type);
                });
            });
            
            // Process backup
            document.getElementById('process-backup-btn').addEventListener('click', processBackup);
            
            // Close modals on outside click
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        modal.classList.remove('active');
                    }
                });
            });
            
            // Home button
            document.getElementById('home-btn').addEventListener('click', () => {
                navLinks.forEach(l => l.classList.remove('active'));
                document.querySelector('.nav-link[data-page="dashboard"]').classList.add('active');
                
                pages.forEach(page => page.classList.remove('active'));
                document.getElementById('dashboard-page').classList.add('active');
                
                updateDashboard();
            });
        }
        
        // ====================
        // SUBJECT-FILTERED KPI CALCULATIONS
        // ====================
        function updateSubjectFilteredKPIs() {
            const filter = currentSubjectFilter;
            
            if (filter === 'all') {
                calculateKPIs();
                return;
            }
            
            // Calculate subject-specific KPIs
            let subjectActualHours = 0;
            let subjectPlannedHours = userStudyPlan?.subjectHours?.[filter] || 0;
            let completedTopics = 0;
            let totalSubjectTopics = syllabusData[filter]?.topics.length || 0;
            
            const subjectProgress = userProgress?.subjects?.[filter];
            if (subjectProgress && subjectProgress.topics) {
                Object.values(subjectProgress.topics).forEach(topic => {
                    if (topic.status === 'completed') completedTopics++;
                    
                    if (topic.subtopics) {
                        Object.values(topic.subtopics).forEach(subtopic => {
                            subjectActualHours += subtopic.actualHours || 0;
                        });
                    }
                });
            }
            
            let subjectTargets = [...userTargets, ...completedTargets]
                .filter(t => t.subject === filter);
            let subjectAchievedTargets = subjectTargets.filter(t => t.completed).length;
            
            // Update KPI cards
            document.getElementById('actual-hours').textContent = Math.round(subjectActualHours * 10) / 10;
            document.getElementById('planned-hours').textContent = subjectPlannedHours;
            document.getElementById('overall-progress').textContent = subjectPlannedHours > 0 ? 
                `${Math.round((subjectActualHours / subjectPlannedHours) * 100)}%` : "0%";
            document.getElementById('subjects-completed').textContent = "N/A";
            document.getElementById('topics-completed').textContent = completedTopics;
            document.getElementById('total-topics').textContent = totalSubjectTopics;
            document.getElementById('plan-completion').textContent = subjectPlannedHours > 0 ? 
                `${Math.round((subjectActualHours / subjectPlannedHours) * 100)}%` : "0%";
            document.getElementById('targets-achieved').textContent = `${subjectAchievedTargets}/${subjectTargets.length}`;
            
            if (subjectTargets.length > 0) {
                const successRate = Math.round((subjectAchievedTargets / subjectTargets.length) * 100);
                document.getElementById('success-rate').textContent = `${successRate}%`;
            }
        }
        
        // ====================
        // IMPROVED STUDY PLAN CALCULATIONS
        // ====================
        function calculateStudyPlan() {
            const daysToExam = parseInt(document.getElementById('days-to-exam').value) || 180;
            const dailyHours = parseFloat(document.getElementById('daily-hours').value) || 4;
            const startDate = document.getElementById('start-date').value || new Date().toISOString().split('T')[0];
            
            const totalHours = Math.round(daysToExam * dailyHours);
            
            const start = new Date(startDate);
            const examDate = new Date(start);
            examDate.setDate(start.getDate() + daysToExam);
            
            document.getElementById('total-days').textContent = daysToExam;
            document.getElementById('total-hours').textContent = totalHours;
            document.getElementById('daily-target').textContent = dailyHours;
            document.getElementById('exam-date').textContent = examDate.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
            
            window.tempStudyPlan = {
                daysToExam: daysToExam,
                dailyHours: dailyHours,
                totalHours: totalHours,
                startDate: startDate,
                examDate: examDate.toISOString().split('T')[0],
                subjectHours: {}
            };
            
            const subjectHoursList = document.getElementById('subject-hours-list');
            subjectHoursList.innerHTML = '';
            
            let totalAllocated = 0;
            for (const subjectId in syllabusData) {
                const subjectWeight = syllabusData[subjectId].weightage;
                const calculatedHours = Math.round((subjectWeight / 100) * totalHours);
                totalAllocated += calculatedHours;
                
                const subjectRow = document.createElement('div');
                subjectRow.className = 'subject-hour-item';
                subjectRow.innerHTML = `
                    <span>${syllabusData[subjectId].name}</span>
                    <div>
                        <input type="number" 
                               class="hour-input" 
                               data-subject="${subjectId}" 
                               value="${calculatedHours}" 
                               min="0" 
                               max="${totalHours}"
                               onchange="updateHourDistribution()">
                        <span>hours</span>
                    </div>
                `;
                subjectHoursList.appendChild(subjectRow);
            }
            
            document.querySelectorAll('.hour-input').forEach(input => {
                input.addEventListener('change', updateHourDistribution);
                input.addEventListener('input', updateHourDistribution);
            });
            
            document.getElementById('subject-hours-distribution').style.display = 'block';
            document.getElementById('target-display').style.display = 'block';
            
            updateHourDistribution();
            
            document.getElementById('target-display').scrollIntoView({ behavior: 'smooth' });
        }
        
        function updateHourDistribution() {
            const totalHours = window.tempStudyPlan?.totalHours || 720;
            let totalAllocated = 0;
            
            document.querySelectorAll('.hour-input').forEach(input => {
                totalAllocated += parseInt(input.value) || 0;
            });
            
            const remaining = totalHours - totalAllocated;
            const hoursSummary = document.getElementById('hours-summary');
            
            hoursSummary.innerHTML = `Total Allocated: ${totalAllocated} hours | Remaining: ${remaining} hours`;
            hoursSummary.className = remaining >= 0 ? 'hours-summary' : 'hours-summary negative';
            
            if (remaining < 0) {
                hoursSummary.innerHTML += '<br><small style="font-weight: normal;">Reduce some hours to match total</small>';
            }
        }
        
        // ====================
        // SMART PACE CALCULATIONS
        // ====================
        function calculateSmartPace() {
            const totalPlannedHours = userStudyPlan?.totalHours || 720;
            const totalActualHours = userStats.totalHoursStudied || 0;
            const daysStudied = userStats.totalStudyDays || 1;
            
            const dailyVelocity = daysStudied > 0 ? totalActualHours / daysStudied : 0;
            const remainingHours = Math.max(0, totalPlannedHours - totalActualHours);
            const daysRemainingByVelocity = dailyVelocity > 0 ? Math.ceil(remainingHours / dailyVelocity) : 999;
            const daysRemainingFromPlan = userStudyPlan?.daysToExam - daysStudied;
            const bufferDays = daysRemainingFromPlan - daysRemainingByVelocity;
            
            document.getElementById('current-pace').textContent = `${Math.round(dailyVelocity * 10) / 10} hrs/day`;
            
            const paceStatus = document.getElementById('pace-status');
            if (bufferDays > 7) {
                paceStatus.innerHTML = '<span class="performance-good">Ahead by ' + bufferDays + ' days!</span>';
            } else if (bufferDays > 0) {
                paceStatus.innerHTML = '<span class="performance-good">Slightly ahead</span>';
            } else if (bufferDays === 0) {
                paceStatus.innerHTML = '<span class="performance-good">Exactly on track</span>';
            } else if (bufferDays >= -7) {
                paceStatus.innerHTML = '<span class="performance-neutral">Slightly behind</span>';
            } else {
                paceStatus.innerHTML = '<span class="performance-bad">Behind by ' + Math.abs(bufferDays) + ' days</span>';
            }
            
            const projectionText = document.getElementById('projection-text');
            if (remainingHours <= 0) {
                projectionText.innerHTML = `🎉 <strong>Congratulations!</strong> You've completed your study plan!`;
            } else if (bufferDays > 0) {
                projectionText.innerHTML = `📈 <strong>Great progress!</strong> At current pace (${Math.round(dailyVelocity * 10) / 10} hrs/day), you'll finish in <strong>${daysRemainingByVelocity} days</strong>. You're <strong>${bufferDays} days ahead</strong> of schedule!`;
            } else if (bufferDays < 0) {
                projectionText.innerHTML = `📊 <strong>Current pace:</strong> ${Math.round(dailyVelocity * 10) / 10} hrs/day. You'll finish in <strong>${daysRemainingByVelocity} days</strong> (${Math.abs(bufferDays)} days behind). Consider increasing to <strong>${Math.round((remainingHours / daysRemainingFromPlan) * 10) / 10} hrs/day</strong> to catch up.`;
            } else {
                projectionText.innerHTML = `📊 <strong>On track!</strong> Current pace (${Math.round(dailyVelocity * 10) / 10} hrs/day) matches your plan. Keep it up!`;
            }
        }
        
        // ====================
        // INSTANT TARGET COMPLETION
        // ====================
        function completeTarget(index) {
            if (index >= 0 && index < userTargets.length) {
                const target = userTargets[index];
                target.completed = true;
                target.completedDate = new Date().toISOString();
                
                const achievement = target.plannedHours > 0 ? 
                    Math.round((target.actualHours || 0) / target.plannedHours * 100) : 0;
                
                if (achievement >= 100) {
                    target.status = 'completed';
                } else if (achievement >= 80) {
                    target.status = 'almost-completed';
                } else {
                    target.status = 'partial';
                }
                
                completedTargets.push(target);
                userTargets.splice(index, 1);
                
                DataStorage.save('targets', userTargets);
                DataStorage.save('completedTargets', completedTargets);
                
                loadTargets();
                loadTargetHistory();
                updateDashboard();
                
                showToast('Target moved to history!', 'success');
            }
        }
        
        // ====================
        // DELETE ENTRY FEATURE
        // ====================
        function loadDeleteEntries(type) {
            const entryListContainer = document.getElementById('entry-list-container');
            entryListContainer.innerHTML = '';
            
            let entries = [];
            let entryName = '';
            
            switch(type) {
                case 'targets':
                    entries = [...userTargets, ...completedTargets];
                    entryName = 'targets';
                    break;
                case 'videos':
                    entries = userVideos;
                    entryName = 'videos';
                    break;
                case 'resources':
                    entries = userResources;
                    entryName = 'resources';
                    break;
            }
            
            if (entries.length === 0) {
                entryListContainer.innerHTML = '<p style="color: var(--gray); text-align: center;">No entries found</p>';
                return;
            }
            
            entries.forEach((entry, index) => {
                const checkbox = document.createElement('div');
                checkbox.className = 'checkbox-item';
                
                let label = '';
                if (type === 'targets') {
                    label = `${entry.topic} (${getSubjectName(entry.subject)}) - ${formatDate(entry.date)}`;
                } else if (type === 'videos') {
                    label = `${entry.title} (${getSubjectName(entry.subject)})`;
                } else if (type === 'resources') {
                    label = `${entry.title} (${getSubjectName(entry.subject)} - ${entry.type})`;
                }
                
                checkbox.innerHTML = `
                    <input type="checkbox" id="entry-${type}-${index}" value="${entry.id || index}" data-type="${type}">
                    <label for="entry-${type}-${index}">${label}</label>
                `;
                entryListContainer.appendChild(checkbox);
            });
        }
        
        function deleteSelectedEntries() {
            const password = document.getElementById('delete-password').value;
            if (password !== 'R@dha') {
                document.getElementById('delete-message').textContent = 'Incorrect password!';
                document.getElementById('delete-message').className = 'license-message error';
                document.getElementById('delete-message').style.display = 'block';
                return;
            }
            
            const checkboxes = document.querySelectorAll('#entry-list-container input[type="checkbox"]:checked');
            if (checkboxes.length === 0) {
                document.getElementById('delete-message').textContent = 'Please select entries to delete.';
                document.getElementById('delete-message').className = 'license-message error';
                document.getElementById('delete-message').style.display = 'block';
                return;
            }
            
            if (!confirm(`Are you sure you want to delete ${checkboxes.length} selected entries?`)) {
                return;
            }
            
            const type = document.querySelector('.entry-type-btn.active').getAttribute('data-type');
            const idsToDelete = Array.from(checkboxes).map(cb => parseInt(cb.value));
            
            switch(type) {
                case 'targets':
                    userTargets = userTargets.filter((t, idx) => !idsToDelete.includes(idx));
                    completedTargets = completedTargets.filter((t, idx) => !idsToDelete.includes(idx + userTargets.length));
                    DataStorage.save('targets', userTargets);
                    DataStorage.save('completedTargets', completedTargets);
                    break;
                case 'videos':
                    userVideos = userVideos.filter(v => !idsToDelete.includes(v.id));
                    DataStorage.save('videos', userVideos);
                    break;
                case 'resources':
                    userResources = userResources.filter(r => !idsToDelete.includes(r.id));
                    DataStorage.save('resources', userResources);
                    break;
            }
            
            document.getElementById('delete-password').value = '';
            
            document.getElementById('delete-message').textContent = `${checkboxes.length} entries deleted successfully!`;
            document.getElementById('delete-message').className = 'license-message success';
            document.getElementById('delete-message').style.display = 'block';
            
            loadDeleteEntries(type);
            
            if (type === 'targets') {
                loadTargets();
                loadTargetHistory();
                updateDashboard();
            } else if (type === 'videos') {
                loadVideos();
            } else if (type === 'resources') {
                loadResources();
            }
            
            setTimeout(() => {
                document.getElementById('delete-message').style.display = 'none';
            }, 3000);
        }
        
        // ====================
        // SMART NOTIFICATIONS
        // ====================
        function setupNotifications() {
            if ('Notification' in window && Notification.permission === 'default') {
                Notification.requestPermission();
            }
            
            if (notificationTimer) {
                clearInterval(notificationTimer);
            }
            
            scheduleDailyNotification(6, 0, 'morning');
            scheduleDailyNotification(20, 0, 'evening');
            
            schedulePeriodicReminders();
        }
        
        function scheduleDailyNotification(hour, minute, timeOfDay) {
            const now = new Date();
            const notificationTime = new Date();
            notificationTime.setHours(hour, minute, 0, 0);
            
            if (now > notificationTime) {
                notificationTime.setDate(notificationTime.getDate() + 1);
            }
            
            const timeUntilNotification = notificationTime.getTime() - now.getTime();
            
            setTimeout(() => {
                sendSmartNotification(timeOfDay);
                scheduleDailyNotification(hour, minute, timeOfDay);
            }, timeUntilNotification);
        }
        
        function schedulePeriodicReminders() {
            notificationTimer = setInterval(() => {
                const now = new Date();
                const currentHour = now.getHours();
                
                if (currentHour >= 8 && currentHour <= 22) {
                    sendStudyReminder();
                }
            }, 4 * 60 * 60 * 1000);
        }
        
        function sendSmartNotification(timeOfDay) {
            if (Notification.permission !== 'granted') return;
            
            const today = new Date().toISOString().split('T')[0];
            const todayTargets = [...userTargets, ...completedTargets].filter(t => t.date === today);
            const totalPlannedToday = todayTargets.reduce((sum, t) => sum + (t.plannedHours || 0), 0);
            const totalActualToday = todayTargets.reduce((sum, t) => sum + (t.actualHours || 0), 0);
            
            let title = '';
            let body = '';
            
            if (timeOfDay === 'morning') {
                title = '🌅 CA Final Study Plan';
                if (totalPlannedToday > 0) {
                    body = `Good morning! You have ${totalPlannedToday} hours planned for today. Start strong!`;
                } else {
                    body = 'Good morning! Time to plan your study day. Set some targets!';
                }
            } else if (timeOfDay === 'evening') {
                title = '🌙 CA Final Progress Update';
                if (totalActualToday > 0) {
                    const efficiency = totalPlannedToday > 0 ? 
                        Math.round((totalActualToday / totalPlannedToday) * 100) : 100;
                    body = `You studied ${totalActualToday} hours today (${efficiency}% efficiency). Great job!`;
                } else {
                    body = 'Evening check-in: Have you studied today? Update your progress!';
                }
            }
            
            const remainingHours = userStudyPlan?.totalHours ? 
                Math.max(0, userStudyPlan.totalHours - (userStats.totalHoursStudied || 0)) : 0;
            const dailyVelocity = userStats.dailyVelocity || 0;
            
            if (remainingHours > 0 && dailyVelocity > 0) {
                const daysRemaining = Math.ceil(remainingHours / dailyVelocity);
                body += ` At this pace, you'll finish in ${daysRemaining} days.`;
            }
            
            new Notification(title, {
                body: body,
                icon: 'https://cdn-icons-png.flaticon.com/512/3135/3135715.png'
            });
        }
        
        function sendStudyReminder() {
            if (Notification.permission !== 'granted') return;
            
            const now = new Date();
            const currentHour = now.getHours();
            
            let message = '';
            if (currentHour < 12) {
                message = 'Morning study session? Update your progress!';
            } else if (currentHour < 17) {
                message = 'Afternoon study break? Log your hours!';
            } else {
                message = 'Evening study time? Track your progress!';
            }
            
            new Notification('📚 CA Study Reminder', {
                body: message,
                icon: 'https://cdn-icons-png.flaticon.com/512/3135/3135715.png'
            });
        }
        
        // ====================
        // GREEN CHART COLORS
        // ====================
        function updateChart() {
            const ctx = document.getElementById('progress-chart').getContext('2d');
            
            if (progressChart) {
                progressChart.destroy();
            }
            
            let chartData, chartOptions;
            
            if (currentChartType === 'subject') {
                let subjectsToShow = [];
                
                if (currentSubjectFilter === 'all') {
                    subjectsToShow = Object.keys(syllabusData);
                } else {
                    subjectsToShow = [currentSubjectFilter];
                }
                
                const subjectNames = subjectsToShow.map(subjectId => {
                    const name = syllabusData[subjectId].name;
                    return name.length > 20 ? name.substring(0, 20) + '...' : name;
                });
                
                const plannedHours = subjectsToShow.map(subjectId => {
                    return userStudyPlan?.subjectHours?.[subjectId] || 0;
                });
                
                const actualHours = subjectsToShow.map(subjectId => {
                    let subjectActual = 0;
                    if (userProgress.subjects[subjectId]) {
                        for (const topicName in userProgress.subjects[subjectId].topics) {
                            const topic = userProgress.subjects[subjectId].topics[topicName];
                            if (topic.subtopics) {
                                Object.values(topic.subtopics).forEach(subtopic => {
                                    subjectActual += subtopic.actualHours || 0;
                                });
                            }
                        }
                    }
                    return subjectActual;
                });
                
                const backgroundColors = actualHours.map((actual, index) => {
                    const planned = plannedHours[index];
                    const achievement = planned > 0 ? actual / planned : 0;
                    
                    if (achievement >= 1) return 'rgba(46, 204, 113, 0.9)';
                    if (achievement >= 0.8) return 'rgba(52, 211, 153, 0.8)';
                    if (achievement >= 0.6) return 'rgba(85, 239, 196, 0.7)';
                    if (achievement >= 0.4) return 'rgba(129, 236, 236, 0.6)';
                    if (achievement >= 0.2) return 'rgba(0, 184, 148, 0.5)';
                    return 'rgba(0, 150, 136, 0.4)';
                });
                
                chartData = {
                    labels: subjectNames,
                    datasets: [{
                        label: 'Actual Hours',
                        data: actualHours,
                        backgroundColor: backgroundColors,
                        borderColor: backgroundColors.map(color => color.replace('0.', '1.').slice(0, -1) + '1)'),
                        borderWidth: 2,
                        borderRadius: 8
                    }]
                };
                
                chartOptions = {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    label += context.raw + ' hours';
                                    
                                    const planned = plannedHours[context.dataIndex];
                                    const actual = actualHours[context.dataIndex];
                                    if (planned > 0) {
                                        const percentage = Math.round((actual / planned) * 100);
                                        label += ` (${percentage}% of ${planned} planned)`;
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            }
                        },
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Hours'
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        }
                    }
                };
                
                progressChart = new Chart(ctx, {
                    type: 'bar',
                    data: chartData,
                    options: chartOptions
                });
                
            } else if (currentChartType === 'time') {
                const days = 7;
                const labels = [];
                const actualData = [];
                
                const today = new Date();
                for (let i = days - 1; i >= 0; i--) {
                    const date = new Date();
                    date.setDate(today.getDate() - i);
                    const dateStr = date.toISOString().split('T')[0];
                    
                    labels.push(date.toLocaleDateString('en-US', { weekday: 'short' }));
                    
                    const dayTargets = [...userTargets, ...completedTargets].filter(t => t.date === dateStr);
                    const actual = dayTargets.reduce((sum, t) => sum + (t.actualHours || 0), 0);
                    actualData.push(actual);
                }
                
                const greenGradient = ctx.createLinearGradient(0, 0, 0, 400);
                greenGradient.addColorStop(0, 'rgba(46, 204, 113, 0.8)');
                greenGradient.addColorStop(1, 'rgba(46, 204, 113, 0.2)');
                
                chartData = {
                    labels: labels,
                    datasets: [{
                        label: 'Actual Hours',
                        data: actualData,
                        borderColor: 'rgba(46, 204, 113, 1)',
                        backgroundColor: greenGradient,
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4
                    }]
                };
                
                chartOptions = {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Hours'
                            }
                        }
                    }
                };
                
                progressChart = new Chart(ctx, {
                    type: 'line',
                    data: chartData,
                    options: chartOptions
                });
                
            } else if (currentChartType === 'targets') {
                const totalTargets = userStats.totalTargetsSet || 0;
                const achievedTargets = userStats.totalTargetsAchieved || 0;
                const pendingTargets = totalTargets - achievedTargets;
                
                let labels, data, backgroundColors;
                
                if (totalTargets === 0) {
                    labels = ['No Targets'];
                    data = [100];
                    backgroundColors = ['rgba(149, 165, 166, 0.7)'];
                } else {
                    labels = ['Achieved', 'Pending'];
                    data = [achievedTargets, pendingTargets];
                    backgroundColors = [
                        'rgba(46, 204, 113, 0.8)',
                        'rgba(0, 184, 148, 0.5)'
                    ];
                }
                
                chartData = {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: backgroundColors,
                        borderColor: backgroundColors.map(color => color.replace('0.', '1.').slice(0, -1) + '1)'),
                        borderWidth: 2
                    }]
                };
                
                chartOptions = {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                };
                
                progressChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: chartData,
                    options: chartOptions
                });
            }
        }
        
        // ====================
        // HELPER FUNCTIONS
        // ====================
        function getSubjectName(subjectId) {
            const subjectMap = {
                'paper1': 'Paper 1: FR',
                'paper2': 'Paper 2: AFM',
                'paper3': 'Paper 3: Audit',
                'paper4': 'Paper 4: DT',
                'paper5': 'Paper 5: IDT',
                'paper6': 'Paper 6: IBS',
                'general': 'General'
            };
            return subjectMap[subjectId] || subjectId;
        }
        
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
        }
        
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastTitle = document.getElementById('toast-title');
            const toastMessage = document.getElementById('toast-message');
            const toastIcon = toast.querySelector('i');
            
            toastTitle.textContent = type === 'success' ? 'Success!' : 'Error!';
            toastMessage.textContent = message;
            
            toast.className = `toast ${type}`;
            toastIcon.className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // ====================
        // UPDATED KPI CALCULATION
        // ====================
        function calculateKPIs() {
            let totalActualHours = 0;
            let totalPlannedHours = userStudyPlan?.totalHours || 720;
            let completedTopics = 0;
            let completedSubjects = 0;
            let totalSubtopicsCompleted = 0;
            let totalSubtopics = 0;
            
            let subjectsToCalculate = [];
            
            if (currentSubjectFilter === 'all') {
                subjectsToCalculate = Object.keys(syllabusData);
            } else {
                subjectsToCalculate = [currentSubjectFilter];
            }
            
            subjectsToCalculate.forEach(subjectId => {
                const subject = syllabusData[subjectId];
                const subjectProgress = userProgress?.subjects?.[subjectId] || { topics: {} };
                
                let subjectCompleted = true;
                
                if (subjectProgress.topics) {
                    for (const topicName in subjectProgress.topics) {
                        const topic = subjectProgress.topics[topicName];
                        
                        if (topic.status === 'completed') {
                            completedTopics++;
                        } else {
                            subjectCompleted = false;
                        }
                        
                        if (topic.subtopics) {
                            Object.values(topic.subtopics).forEach(subtopic => {
                                totalActualHours += subtopic.actualHours || 0;
                                totalSubtopics++;
                                if (subtopic.completed) {
                                    totalSubtopicsCompleted++;
                                }
                            });
                        }
                    }
                }
                
                if (subjectCompleted && subjectProgress.topics && Object.keys(subjectProgress.topics).length > 0) {
                    completedSubjects++;
                }
            });
            
            let totalTargets = userTargets.length + completedTargets.length;
            let achievedTargets = 0;
            let successfulTargets = 0;
            
            if (totalTargets > 0) {
                achievedTargets = completedTargets.length;
                
                completedTargets.forEach(target => {
                    if (target.actualHours && target.plannedHours) {
                        const achievement = (target.actualHours / target.plannedHours) * 100;
                        if (achievement >= 80) successfulTargets++;
                    }
                });
                
                userTargets.forEach(target => {
                    if (target.completed) {
                        achievedTargets++;
                        if (target.actualHours && target.plannedHours) {
                            const achievement = (target.actualHours / target.plannedHours) * 100;
                            if (achievement >= 80) successfulTargets++;
                        }
                    }
                });
                
                userStats.successRate = totalTargets > 0 ? Math.round((successfulTargets / totalTargets) * 100) : 0;
            }
            
            const today = new Date().toISOString().split('T')[0];
            const todayTargets = [...userTargets, ...completedTargets].filter(t => t.date === today);
            let dailyEfficiency = 0;
            
            if (todayTargets.length > 0) {
                const totalPlannedToday = todayTargets.reduce((sum, t) => sum + (t.plannedHours || 0), 0);
                const totalActualToday = todayTargets.reduce((sum, t) => sum + (t.actualHours || 0), 0);
                dailyEfficiency = totalPlannedToday > 0 ? 
                    Math.round((totalActualToday / totalPlannedToday) * 100) : 0;
            }
            
            const daysSinceStart = userStats.totalStudyDays || 1;
            userStats.dailyVelocity = daysSinceStart > 0 ? totalActualHours / daysSinceStart : 0;
            
            const last7Days = getLast7Days();
            let last7DaysHours = 0;
            last7Days.forEach(date => {
                const dayTargets = [...userTargets, ...completedTargets].filter(t => t.date === date);
                last7DaysHours += dayTargets.reduce((sum, t) => sum + (t.actualHours || 0), 0);
            });
            userStats.last7DaysVelocity = last7DaysHours / 7;
            
            const dailyTarget = userStudyPlan?.dailyHours || 4;
            const expectedHours = dailyTarget * daysSinceStart;
            const performanceRatio = totalActualHours / expectedHours;
            
            userStats.totalHoursStudied = totalActualHours;
            userStats.totalTargetsSet = totalTargets;
            userStats.totalTargetsAchieved = achievedTargets;
            userStats.totalSuccessfulTargets = successfulTargets;
            DataStorage.save('stats', userStats);
            
            const plannedHoursForFilter = currentSubjectFilter === 'all' ? 
                totalPlannedHours : 
                (userStudyPlan?.subjectHours?.[currentSubjectFilter] || 0);
            
            document.getElementById('actual-hours').textContent = Math.round(totalActualHours * 10) / 10;
            document.getElementById('planned-hours').textContent = plannedHoursForFilter;
            document.getElementById('overall-progress').textContent = `${Math.round((totalSubtopicsCompleted / totalSubtopics) * 100) || 0}%`;
            document.getElementById('subjects-completed').textContent = completedSubjects;
            document.getElementById('topics-completed').textContent = completedTopics;
            document.getElementById('total-topics').textContent = currentSubjectFilter === 'all' ? totalTopics : syllabusData[currentSubjectFilter]?.topics.length || 0;
            document.getElementById('plan-completion').textContent = `${Math.round((totalActualHours / plannedHoursForFilter) * 100) || 0}%`;
            document.getElementById('targets-achieved').textContent = `${achievedTargets}/${totalTargets}`;
            document.getElementById('success-rate').textContent = `${userStats.successRate}%`;
            document.getElementById('daily-efficiency').textContent = `${dailyEfficiency}%`;
            document.getElementById('current-pace').textContent = `${Math.round(userStats.dailyVelocity * 10) / 10} hrs/day`;
            
            const paceStatus = document.getElementById('pace-status');
            if (userStats.dailyVelocity >= dailyTarget * 1.1) {
                paceStatus.innerHTML = '<span class="performance-good">Ahead of Schedule</span>';
                paceStatus.className = 'kpi-subtext';
            } else if (userStats.dailyVelocity >= dailyTarget * 0.9) {
                paceStatus.innerHTML = '<span class="performance-good">On Track</span>';
                paceStatus.className = 'kpi-subtext';
            } else if (userStats.dailyVelocity >= dailyTarget * 0.5) {
                paceStatus.innerHTML = '<span class="performance-neutral">Slightly Behind</span>';
                paceStatus.className = 'kpi-subtext';
            } else {
                paceStatus.innerHTML = '<span class="performance-bad">Behind Schedule</span>';
                paceStatus.className = 'kpi-subtext';
            }
            
            const performanceIndicator = document.getElementById('performance-indicator');
            if (performanceRatio >= 1.1) {
                performanceIndicator.innerHTML = '<i class="fas fa-arrow-up performance-good"></i> <span>Overperforming</span>';
            } else if (performanceRatio >= 0.8) {
                performanceIndicator.innerHTML = '<i class="fas fa-check performance-good"></i> <span>On Track</span>';
            } else if (performanceRatio >= 0.5) {
                performanceIndicator.innerHTML = '<i class="fas fa-exclamation-triangle performance-neutral"></i> <span>Needs Improvement</span>';
            } else {
                performanceIndicator.innerHTML = '<i class="fas fa-arrow-down performance-bad"></i> <span>Underperforming</span>';
            }
            
            updateStreak();
        }
        
        function getLast7Days() {
            const dates = [];
            for (let i = 0; i < 7; i++) {
                const date = new Date();
                date.setDate(date.getDate() - i);
                dates.push(date.toISOString().split('T')[0]);
            }
            return dates;
        }
        
        function updateStreak() {
            const today = new Date().toISOString().split('T')[0];
            const lastStudy = userStats.lastStudyDate;
            
            const todayHours = [...userTargets, ...completedTargets]
                .filter(t => t.date === today)
                .reduce((sum, t) => sum + (t.actualHours || 0), 0);
            
            if (todayHours > 0) {
                if (!lastStudy) {
                    userStats.currentStreak = 1;
                } else {
                    const lastDate = new Date(lastStudy);
                    const todayDate = new Date(today);
                    const diffTime = Math.abs(todayDate - lastDate);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    
                    if (diffDays === 1) {
                        userStats.currentStreak++;
                    } else if (diffDays > 1) {
                        userStats.currentStreak = 1;
                    }
                }
                userStats.lastStudyDate = today;
            }
            
            userStats.bestStreak = Math.max(userStats.bestStreak, userStats.currentStreak);
            if (todayHours > 0) {
                userStats.totalStudyDays++;
            }
            
            DataStorage.save('stats', userStats);
            document.getElementById('streak-days').textContent = userStats.currentStreak;
        }
        
        // ====================
        // INITIALIZE APP
        // ====================
        function loadUserData() {
            const savedUser = DataStorage.load('user');
            if (savedUser) {
                currentUser = savedUser;
            } else {
                currentUser = {
                    name: "Satyam Kumar",
                    initials: "SK"
                };
                DataStorage.save('user', currentUser);
            }
            
            userProgress = DataStorage.load('progress') || initializeProgress();
            userTargets = DataStorage.load('targets') || [];
            completedTargets = DataStorage.load('completedTargets') || [];
            userStudyPlan = DataStorage.load('studyPlan') || initializeStudyPlan();
            userStats = DataStorage.load('stats') || initializeStats();
            userVideos = DataStorage.load('videos') || [];
            userResources = DataStorage.load('resources') || [];
            
            updateUserUI();
            updatePlanDisplay();
            updateDashboard();
            
            if (userVideos.length === 0 || userResources.length === 0) {
                loadDefaultContent();
            }
        }
        
        function initializeProgress() {
            const progress = { subjects: {} };
            
            for (const paperId in syllabusData) {
                progress.subjects[paperId] = {
                    completedTopics: 0,
                    totalTopics: syllabusData[paperId].topics.length,
                    topics: {}
                };
                
                syllabusData[paperId].topics.forEach(topic => {
                    progress.subjects[paperId].topics[topic.name] = {
                        status: 'not-started',
                        subtopics: {}
                    };
                    
                    topic.subtopics.forEach(subtopic => {
                        progress.subjects[paperId].topics[topic.name].subtopics[subtopic.name] = {
                            actualHours: 0,
                            completed: false
                        };
                    });
                });
            }
            
            return progress;
        }
        
        function initializeStudyPlan() {
            const today = new Date();
            const examDate = new Date();
            examDate.setDate(today.getDate() + 180);
            
            const plan = {
                daysToExam: 180,
                dailyHours: 4,
                totalHours: 720,
                startDate: today.toISOString().split('T')[0],
                examDate: examDate.toISOString().split('T')[0],
                subjectHours: {},
                customDistribution: false
            };
            
            for (const subjectId in syllabusData) {
                const subjectWeight = syllabusData[subjectId].weightage;
                plan.subjectHours[subjectId] = Math.round((subjectWeight / 100) * 720);
            }
            
            return plan;
        }
        
        function initializeStats() {
            return {
                totalStudyDays: 0,
                currentStreak: 0,
                bestStreak: 0,
                totalHoursStudied: 0,
                totalTargetsSet: 0,
                totalTargetsAchieved: 0,
                totalSuccessfulTargets: 0,
                successRate: 0,
                lastStudyDate: null,
                dailyVelocity: 0,
                last7DaysVelocity: 0
            };
        }
        
        function updateUserUI() {
            if (currentUser) {
                const initials = currentUser.name.split(' ').map(n => n[0]).join('').toUpperCase();
                userAvatar.textContent = initials.substring(0, 2);
                userName.textContent = currentUser.name;
            }
        }
        
        function loadDefaultContent() {
            if (userVideos.length === 0) {
                userVideos = [
                    {
                        id: Date.now(),
                        title: "Financial Reporting - Complete Guide",
                        subject: "paper1",
                        link: "https://youtube.com/playlist?list=example1",
                        author: "CA Expert",
                        addedDate: new Date().toISOString()
                    },
                    {
                        id: Date.now() + 1,
                        title: "Advanced Financial Management Tips",
                        subject: "paper2",
                        link: "https://youtube.com/playlist?list=example2",
                        author: "Finance Guru",
                        addedDate: new Date().toISOString()
                    }
                ];
                DataStorage.save('videos', userVideos);
            }
            
            if (userResources.length === 0) {
                userResources = [
                    {
                        id: Date.now(),
                        title: "FR Formula Sheet",
                        subject: "paper1",
                        type: "formulas",
                        link: "#",
                        author: "Satyam Kumar",
                        addedDate: new Date().toISOString()
                    },
                    {
                        id: Date.now() + 1,
                        title: "DT Important Sections",
                        subject: "paper4",
                        type: "notes",
                        link: "#",
                        author: "Satyam Kumar",
                        addedDate: new Date().toISOString()
                    }
                ];
                DataStorage.save('resources', userResources);
            }
        }
        
        // ====================
        // LICENSE FUNCTIONS
        // ====================
        function activateLicense() {
            const licenseKey = licenseKeyInput.value.trim();
            
            if (!licenseKey) {
                showLicenseMessage('Please enter a license key', 'error');
                return;
            }
            
            const validation = LicenseSystem.validateLicense(licenseKey);
            
            if (!validation.valid) {
                showLicenseMessage(validation.error || 'Invalid license key', 'error');
                return;
            }
            
            DataStorage.save('license', {
                key: licenseKey,
                activated: new Date().toISOString(),
                user: validation.data.name
            });
            
            currentUser = {
                name: validation.data.name,
                initials: validation.data.name.split(' ').map(n => n[0]).join('').toUpperCase()
            };
            DataStorage.save('user', currentUser);
            
            licenseContainer.style.display = 'none';
            appContainer.style.display = 'block';
            
            setupEventListeners();
            loadUserData();
            setupNotifications();
            
            showToast('License activated successfully!', 'success');
        }
        
        function showLicenseMessage(message, type) {
            licenseMessage.textContent = message;
            licenseMessage.className = `license-message ${type}`;
            licenseMessage.style.display = 'block';
            
            setTimeout(() => {
                licenseMessage.style.display = 'none';
            }, 5000);
        }
        
        function updateDashboard() {
            calculateKPIs();
            calculateSmartPace();
            updateChart();
            updatePlanDisplay();
        }
        

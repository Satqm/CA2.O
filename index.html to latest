    <script>
        // ====================
        // LICENSE SYSTEM
        // ====================
        const MASTER_KEY = "S@tyamCA2026@Premium";
        
        class LicenseSystem {
            static generateLicense(name, days = 365) {
                const expiryDate = new Date();
                expiryDate.setDate(expiryDate.getDate() + parseInt(days));
                
                const licenseData = {
                    name: name,
                    expiry: expiryDate.toISOString(),
                    generated: new Date().toISOString(),
                    type: "CA-PREM"
                };
                
                const jsonString = JSON.stringify(licenseData);
                const encrypted = CryptoJS.AES.encrypt(jsonString, MASTER_KEY).toString();
                const base64 = btoa(encrypted);
                return `CA-PREM-${base64}`;
            }
            
            static validateLicense(licenseKey) {
                try {
                    if (!licenseKey.startsWith('CA-PREM-')) {
                        return { valid: false, error: 'Invalid license format. Must start with CA-PREM-' };
                    }
                    
                    const base64 = licenseKey.replace('CA-PREM-', '');
                    const encrypted = atob(base64);
                    const decrypted = CryptoJS.AES.decrypt(encrypted, MASTER_KEY);
                    const jsonString = decrypted.toString(CryptoJS.enc.Utf8);
                    
                    if (!jsonString) {
                        return { valid: false, error: 'Invalid license key' };
                    }
                    
                    const licenseData = JSON.parse(jsonString);
                    const expiryDate = new Date(licenseData.expiry);
                    
                    return {
                        valid: expiryDate > new Date(),
                        data: licenseData,
                        expiry: expiryDate
                    };
                } catch (error) {
                    return { valid: false, error: 'Invalid license key' };
                }
            }
        }
        
        // ====================
        // DATA STORAGE SYSTEM
        // ====================
        class DataStorage {
            static save(key, data) {
                localStorage.setItem(`ca_pro_${key}`, JSON.stringify(data));
            }
            
            static load(key) {
                const data = localStorage.getItem(`ca_pro_${key}`);
                return data ? JSON.parse(data) : null;
            }
            
            static clear() {
                // Keep license and user info
                const license = this.load('license');
                const user = this.load('user');
                localStorage.clear();
                
                if (license) this.save('license', license);
                if (user) this.save('user', user);
            }
            
            static exportAll() {
                const allData = {
                    user: this.load('user'),
                    progress: this.load('progress'),
                    targets: this.load('targets'),
                    completedTargets: this.load('completedTargets'),
                    studyPlan: this.load('studyPlan'),
                    videos: this.load('videos'),
                    resources: this.load('resources'),
                    stats: this.load('stats'),
                    exportDate: new Date().toISOString(),
                    version: '4.0'
                };
                
                return JSON.stringify(allData, null, 2);
            }
            
            static importAll(jsonData) {
                try {
                    const data = JSON.parse(jsonData);
                    
                    if (!data.version) {
                        return { success: false, error: 'Invalid backup file format' };
                    }
                    
                    // Save all data
                    Object.keys(data).forEach(key => {
                        if (key !== 'exportDate' && key !== 'version') {
                            this.save(key, data[key]);
                        }
                    });
                    
                    return { success: true };
                } catch (error) {
                    return { success: false, error: 'Invalid backup file' };
                }
            }
        }
        

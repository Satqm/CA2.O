            const newAchievements = [];
            
            ACHIEVEMENTS.forEach(achievement => {
                if (!userAchievements.find(a => a.id === achievement.id)) {
                    let achieved = false;
                    
                    if (achievement.type === 'hours' && totalHours >= achievement.threshold) {
                        achieved = true;
                    } else if (achievement.type === 'topics' && completedTopics >= achievement.threshold) {
                        achieved = true;
                    } else if (achievement.type === 'streak' && streak >= achievement.threshold) {
                        achieved = true;
                    }
                    
                    if (achieved) {
                        newAchievements.push({
                            ...achievement,
                            achievedDate: new Date().toISOString()
                        });
                    }
                }
            });
            
            if (newAchievements.length > 0) {
                userAchievements.push(...newAchievements);
                localStorage.setItem('userAchievements', JSON.stringify(userAchievements));
                
                // Show notification for first achievement

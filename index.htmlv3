                flex-direction: column;
                gap: 20px;
            }
            
            .logo h1 {
                font-size: 22px;
            }
            
            .nav-links a {
                padding: 14px 20px;
                min-width: 80px;
                font-size: 13px;
            }
            
            .nav-links a i {
                font-size: 18px;
            }
            
            .kpi-cards {
                grid-template-columns: 1fr;
            }
            
            .kpi-card {
                padding: 25px;
            }
            
            .page-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .page-actions {
                width: 100%;
            }
            
            .toast, .achievement-notification {
                left: 20px;
                right: 20px;
                bottom: 20px;
                top: auto;
                max-width: none;
            }
            
            .achievements-grid {
                grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            }
            
            .footer-link-group {

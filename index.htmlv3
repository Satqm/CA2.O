// Schedule daily notifications
function scheduleDailyNotifications() {
    if (!('serviceWorker' in navigator)) return;
    
    // Schedule morning notification (6 AM)
    scheduleNotification(6, 0, "CA Final Tracker", "📚 Time to plan your study day! What will you study today?");
    
    // Schedule evening notification (8 PM)
    scheduleNotification(20, 0, "CA Final Tracker", "📊 Update your progress! How many hours did you study today?");
}

// Schedule a notification
function scheduleNotification(hour, minute, title, body) {
    const now = new Date();
    const notificationTime = new Date();
    
    notificationTime.setHours(hour);
    notificationTime.setMinutes(minute);
    notificationTime.setSeconds(0);
    
    // If time has passed, schedule for tomorrow
    if (notificationTime < now) {
        notificationTime.setDate(notificationTime.getDate() + 1);
    }
    
    const timeUntilNotification = notificationTime.getTime() - now.getTime();
    
    setTimeout(() => {
        showBrowserNotification(title, body);
        // Schedule again for next day
        scheduleNotification(hour, minute, title, body);
    }, timeUntilNotification);
}

// Show browser notification
function showBrowserNotification(title, body) {
    if (Notification.permission === 'granted') {
        const options = {
            body: body,
            icon: 'https://img.icons8.com/color/96/000000/book-and-pencil.png',
            badge: 'https://img.icons8.com/color/96/000000/book-and-pencil.png',
            tag: 'ca-study-reminder',
            requireInteraction: true,
            silent: false
        };
        
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.ready.then(registration => {
                registration.showNotification(title, options);
            });
        } else {
            new Notification(title, options);
        }
    }
}

// Ask for notification permission on first visit
if (!localStorage.getItem('notificationPermissionAsked')) {
    setTimeout(() => {
        requestNotificationPermission();
        localStorage.setItem('notificationPermissionAsked', 'true');
    }, 5000);
}

// Add link to license generator in user dropdown (optional)
function addLicenseGeneratorLink() {
    const userDropdown = document.getElementById('user-dropdown');
    if (userDropdown) {
        const licenseGeneratorLink = document.createElement('a');
        licenseGeneratorLink.href = 'license-generator.html';
        licenseGeneratorLink.target = '_blank';
        licenseGeneratorLink.innerHTML = '<i class="fas fa-key"></i> License Generator';
        licenseGeneratorLink.style.padding = '14px 24px';
        licenseGeneratorLink.style.display = 'flex';
        licenseGeneratorLink.style.alignItems = 'center';
        licenseGeneratorLink.style.color = 'var(--primary)';
        licenseGeneratorLink.style.textDecoration = 'none';
        licenseGeneratorLink.style.transition = 'all 0.3s';
        
        licenseGeneratorLink.addEventListener('mouseenter', function() {
            this.style.background = '#f8f9fa';
            this.style.color = 'var(--secondary)';
        });
        
        licenseGeneratorLink.addEventListener('mouseleave', function() {
            this.style.background = 'transparent';
            this.style.color = 'var(--primary)';
        });
        
        // Add before logout button
        const logoutBtn = document.getElementById('logout-btn');
        if (logoutBtn && logoutBtn.parentNode) {
            logoutBtn.parentNode.insertBefore(licenseGeneratorLink, logoutBtn);
        }
    }
}

// Call this function when user logs in (in showApp() function)
function showApp() {
    authContainer.style.display = 'none';
    appContainer.classList.add('active');
    
    // Add license generator link for admin (you can add a check for admin user)
    addLicenseGeneratorLink();

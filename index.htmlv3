        // Update dashboard
        function updateDashboard() {
            if (!userProgress || !userStudyPlan) return;
            
            // Calculate totals
            let totalActualHours = userProgress.totalActualHours || 0;
            let totalPlannedHours = userStudyPlan.totalHours || 540;
            let totalTopics = 0;
            let completedTopics = 0;
            let completedSubjects = 0;
            
            for (const subjectId in userProgress.subjects) {
                const subject = userProgress.subjects[subjectId];
                totalTopics += subject.totalTopics || 0;
                completedTopics += subject.completedTopics || 0;
                
                if (subject.completedTopics === subject.totalTopics) {
                    completedSubjects++;
                }
            }
            
            // Update KPI cards
            document.getElementById('actual-hours').textContent = totalActualHours;
            document.getElementById('planned-hours').textContent = totalPlannedHours;
            document.getElementById('total-topics').textContent = totalTopics;
            
            const overallProgress = totalTopics > 0 ? Math.round((completedTopics / totalTopics) * 100) : 0;
            document.getElementById('overall-progress').textContent = `${overallProgress}%`;
            document.getElementById('subjects-completed').textContent = completedSubjects;
            document.getElementById('topics-completed').textContent = completedTopics;
            
            // Calculate plan completion
            const planCompletion = totalPlannedHours > 0 ? Math.round((totalActualHours / totalPlannedHours) * 100) : 0;
            document.getElementById('plan-completion').textContent = `${planCompletion}%`;
            
            // Update achievements
            updateAchievements(totalActualHours, completedTopics, userProgress.streak || 0);
            renderAchievements();
            
            // Check for new achievements
            checkNewAchievements();
        }
        
        // Update study streak
        function updateStreak() {
            const today = new Date().toISOString().split('T')[0];
            const yesterday = new Date(Date.now() - 24 * 60 * 60 * 1000).toISOString().split('T')[0];
            
            if (!userProgress.lastStudyDate) {
                userProgress.streak = 0;
                userProgress.lastStudyDate = today;
            } else if (userProgress.lastStudyDate === today) {
                // Already studied today
            } else if (userProgress.lastStudyDate === yesterday) {
                // Consecutive day
                userProgress.streak = (userProgress.streak || 0) + 1;
                userProgress.lastStudyDate = today;
            } else {
                // Streak broken
                userProgress.streak = 1;
                userProgress.lastStudyDate = today;
            }
            
            localStorage.setItem('userProgress', JSON.stringify(userProgress));
        }
        

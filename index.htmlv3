        // Initialize user progress
        function initializeUserProgress() {
            userProgress = {
                subjects: {},
                totalActualHours: 0,
                dailyLog: {},
                streak: 0,
                lastStudyDate: null
            };
            
            for (const paperId in syllabusData) {
                userProgress.subjects[paperId] = {
                    completedTopics: 0,
                    completedSubtopics: 0,
                    totalTopics: syllabusData[paperId].topics.length,
                    totalSubtopics: 0,
                    topics: {}
                };
                
                syllabusData[paperId].topics.forEach((topic) => {
                    userProgress.subjects[paperId].topics[topic.name] = {
                        completed: false,
                        subtopics: {},
                        timeSpent: 0
                    };
                });
            }
            
            localStorage.setItem('userProgress', JSON.stringify(userProgress));
        }
        
        // Initialize study plan
        function initializeStudyPlan() {
            const today = new Date().toISOString().split('T')[0];
            const examDate = new Date(Date.now() + 90 * 24 * 60 * 60 * 1000).toISOString().split('T')[0];
            
            userStudyPlan = {
                daysToExam: 90,
                dailyHours: 6,
                totalHours: 540,
                startDate: today,
                examDate: examDate,
                subjectHours: {},
                createdAt: new Date().toISOString()
            };
            
            // Calculate subject hours based on weightage
            for (const subjectId in syllabusData) {
                const subjectWeight = syllabusData[subjectId].weightage;
                userStudyPlan.subjectHours[subjectId] = Math.round((subjectWeight / 100) * 540);
            }
            
            localStorage.setItem('studyPlan', JSON.stringify(userStudyPlan));
        }
        

        // Global variables
        let currentUser = null;
        let userProgress = {};
        let progressChart = null;
        
        // DOM Elements
        const authContainer = document.getElementById('auth-container');
        const appContainer = document.getElementById('app-container');
        const loginForm = document.getElementById('login-form');
        const signupForm = document.getElementById('signup-form');
        const loginBtn = document.getElementById('login-btn');
        const signupBtn = document.getElementById('signup-btn');
        const logoutBtn = document.getElementById('logout-btn');
        const authTabs = document.querySelectorAll('.auth-tab');
        const navLinks = document.querySelectorAll('.nav-link');
        const pages = document.querySelectorAll('.page');
        const subjectSelect = document.getElementById('subject-select');
        const subjectContent = document.getElementById('subject-content');
        const progressFilters = document.querySelectorAll('.progress-filter');
        
        // Authentication state observer
        auth.onAuthStateChanged((user) => {
            if (user) {
                // User is signed in
                currentUser = user;
                showApp();
                loadUserProgress();
                updateUserAvatar();
            } else {
                // User is signed out
                showAuth();
            }
        });
        
        // Event Listeners
        authTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabId = tab.getAttribute('data-tab');
                
                authTabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                loginForm.classList.remove('active');
                signupForm.classList.remove('active');
                
                if (tabId === 'login') {
                    loginForm.classList.add('active');
                } else {
                    signupForm.classList.add('active');
                }
            });
        });
        
        loginBtn.addEventListener('click', handleLogin);
        signupBtn.addEventListener('click', handleSignup);
        logoutBtn.addEventListener('click', handleLogout);
        
        // Navigation
        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const pageId = link.getAttribute('data-page');
                
                navLinks.forEach(l => l.classList.remove('active'));
                link.classList.add('active');
                
                pages.forEach(page => page.classList.remove('active'));
                document.getElementById(`${pageId}-page`).classList.add('active');
                
                // Load specific content for pages
                if (pageId === 'subjects') {
                    loadSubjectContent();
                } else if (pageId === 'videos') {
                    loadVideos();
                } else if (pageId === 'notes') {
                    loadNotes();
                } else if (pageId === 'dashboard') {
                    updateDashboard();
                }
            });
        });
        
        // Subject selection
        subjectSelect.addEventListener('change', loadSubjectContent);
        
        // Progress filters
        progressFilters.forEach(filter => {
            filter.addEventListener('click', () => {
                progressFilters.forEach(f => f.classList.remove('active'));
                filter.classList.add('active');
                updateDashboard(filter.getAttribute('data-filter'));
            });
        });
        
        // Video and Notes buttons
        document.getElementById('add-video-btn')?.addEventListener('click', addVideo);
        document.getElementById('add-notes-btn')?.addEventListener('click', addNotes);
        
        // Authentication Functions
        function handleLogin() {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            const messageDiv = document.getElementById('login-message');
            
            if (!email || !password) {
                showMessage(messageDiv, 'Please fill in all fields', 'error');
                return;
            }
            
            loginBtn.innerHTML = '<div class="loading"></div>';
            loginBtn.disabled = true;
            
            auth.signInWithEmailAndPassword(email, password)
                .then(() => {
                    showMessage(messageDiv, 'Login successful!', 'success');
                    // User will be redirected via onAuthStateChanged
                })
                .catch((error) => {
                    showMessage(messageDiv, error.message, 'error');
                    loginBtn.innerHTML = 'Login';
                    loginBtn.disabled = false;
                });
        }
        
        function handleSignup() {
            const name = document.getElementById('signup-name').value;
            const email = document.getElementById('signup-email').value;
            const password = document.getElementById('signup-password').value;
            const messageDiv = document.getElementById('signup-message');
            
            if (!name || !email || !password) {
                showMessage(messageDiv, 'Please fill in all fields', 'error');
                return;
            }
            
            if (password.length < 6) {
                showMessage(messageDiv, 'Password must be at least 6 characters', 'error');
                return;
            }
            
            signupBtn.innerHTML = '<div class="loading"></div>';
            signupBtn.disabled = true;
            
            auth.createUserWithEmailAndPassword(email, password)
                .then((userCredential) => {
                    // Update user profile with name
                    return userCredential.user.updateProfile({
                        displayName: name
                    }).then(() => {
                        // Create user document in Firestore
                        return db.collection('users').doc(userCredential.user.uid).set({
                            name: name,
                            email: email,
                            createdAt: firebase.firestore.FieldValue.serverTimestamp()
                        });
                    });
                })
                .then(() => {
                    showMessage(messageDiv, 'Account created successfully!', 'success');
                    // Initialize user progress
                    initializeUserProgress();
                })
                .catch((error) => {
                    showMessage(messageDiv, error.message, 'error');
                    signupBtn.innerHTML = 'Sign Up';
                    signupBtn.disabled = false;
                });
        }
        
        function handleLogout() {
            auth.signOut().then(() => {
                showAuth();
            });
        }
        
        function showMessage(element, message, type) {
            element.textContent = message;
            element.className = 'auth-message ' + type;
            element.style.display = 'block';
            
            setTimeout(() => {
                element.style.display = 'none';
            }, 5000);
        }
        
        function showAuth() {
            authContainer.style.display = 'flex';
            appContainer.classList.remove('active');
            currentUser = null;
        }
        
        function showApp() {
            authContainer.style.display = 'none';
            appContainer.classList.add('active');
        }
        
        function updateUserAvatar() {
            const userAvatar = document.getElementById('user-avatar');
            if (currentUser && currentUser.displayName) {
                const initials = currentUser.displayName.split(' ').map(n => n[0]).join('').toUpperCase();
                userAvatar.textContent = initials.substring(0, 2);
            } else {
                userAvatar.textContent = 'SK';
            }
        }
        
        // User Progress Functions
        function initializeUserProgress() {
            if (!currentUser) return;
            
            const progressRef = db.collection('userProgress').doc(currentUser.uid);
            
            progressRef.get().then((doc) => {
                if (!doc.exists) {
                    // Initialize progress data structure
                    const initialProgress = {
                        userId: currentUser.uid,
                        subjects: {},
                        totalActualHours: 0,
                        lastUpdated: firebase.firestore.FieldValue.serverTimestamp()
                    };
                    
                    // Initialize all subtopics as not completed
                    for (const paperId in syllabusData) {
                        initialProgress.subjects[paperId] = {
                            completedTopics: 0,
                            completedSubtopics: 0,
                            totalTopics: syllabusData[paperId].topics.length,
                            totalSubtopics: syllabusData[paperId].topics.reduce((sum, topic) => sum + topic.subtopics.length, 0),
                            topics: {}
                        };
                        
                        syllabusData[paperId].topics.forEach((topic, topicIndex) => {
                            initialProgress.subjects[paperId].topics[topic.name] = {
                                completed: false,
                                subtopics: {}
                            };
                            
                            topic.subtopics.forEach((subtopic, subtopicIndex) => {
                                initialProgress.subjects[paperId].topics[topic.name].subtopics[subtopic.name] = {
                                    completed: false,
                                    actualTime: 0
                                };
                            });
                        });
                    }
                    
                    progressRef.set(initialProgress).then(() => {
                        userProgress = initialProgress;
                        updateDashboard();
                    });
                }
            });
        }
        
        function loadUserProgress() {
            if (!currentUser) return;
            
            const progressRef = db.collection('userProgress').doc(currentUser.uid);
            
            progressRef.get().then((doc) => {
                if (doc.exists) {
                    userProgress = doc.data();
                    updateDashboard();
                } else {
                    initializeUserProgress();
                }
            }).catch((error) => {
                console.error("Error loading user progress:", error);
            });
        }
        
        function updateSubtopicsProgress(subjectId, topicName, subtopicName, completed, actualTime) {
            if (!currentUser) return;
            
            const progressRef = db.collection('userProgress').doc(currentUser.uid);
            const subtopicPath = `subjects.${subjectId}.topics.${topicName}.subtopics.${subtopicName}`;
            
            const updateData = {};
            updateData[`${subtopicPath}.completed`] = completed;
            updateData[`${subtopicPath}.actualTime`] = actualTime;
            
            // Update Firestore
            progressRef.update(updateData).then(() => {
                // Update local userProgress object
                if (!userProgress.subjects[subjectId]) {
                    userProgress.subjects[subjectId] = { topics: {} };
                }
                if (!userProgress.subjects[subjectId].topics[topicName]) {
                    userProgress.subjects[subjectId].topics[topicName] = { subtopics: {} };
                }
                if (!userProgress.subjects[subjectId].topics[topicName].subtopics[subtopicName]) {
                    userProgress.subjects[subjectId].topics[topicName].subtopics[subtopicName] = {};
                }
                
                userProgress.subjects[subjectId].topics[topicName].subtopics[subtopicName].completed = completed;
                userProgress.subjects[subjectId].topics[topicName].subtopics[subtopicName].actualTime = actualTime;
                
                // Update topic completion status
                updateTopicCompletion(subjectId, topicName);
                
                // Update dashboard
                updateDashboard();
            }).catch((error) => {
                console.error("Error updating progress:", error);
            });
        }
        
        function updateTopicCompletion(subjectId, topicName) {
            if (!currentUser || !userProgress.subjects[subjectId] || !userProgress.subjects[subjectId].topics[topicName]) return;
            
            const topic = userProgress.subjects[subjectId].topics[topicName];
            const subtopics = Object.values(topic.subtopics);
            const allCompleted = subtopics.length > 0 && subtopics.every(st => st.completed);
            
            const progressRef = db.collection('userProgress').doc(currentUser.uid);
            const topicPath = `subjects.${subjectId}.topics.${topicName}`;
            
            progressRef.update({
                [`${topicPath}.completed`]: allCompleted
            }).then(() => {
                userProgress.subjects[subjectId].topics[topicName].completed = allCompleted;
            });
        }
        
        // Dashboard Functions
        function updateDashboard(filter = 'all') {
            if (!userProgress || !userProgress.subjects) return;
            
            let totalActualHours = 0;
            let totalPlannedHours = 680; // From your data
            let totalTopics = 0;
            let completedTopics = 0;
            let totalSubtopics = 0;
            let completedSubtopics = 0;
            let completedSubjects = 0;
            
            // Calculate totals based on filter
            for (const subjectId in userProgress.subjects) {
                if (filter !== 'all' && filter !== subjectId) continue;
                
                const subject = userProgress.subjects[subjectId];
                
                // Count topics and subtopics
                for (const topicName in subject.topics) {
                    totalTopics++;
                    
                    const topic = subject.topics[topicName];
                    if (topic.completed) completedTopics++;
                    
                    for (const subtopicName in topic.subtopics) {
                        totalSubtopics++;
                        const subtopic = topic.subtopics[subtopicName];
                        if (subtopic.completed) {
                            completedSubtopics++;
                            totalActualHours += subtopic.actualTime || 0;
                        }
                    }
                }
                
                // Check if subject is complete (all topics completed)
                if (subject.completedTopics === subject.totalTopics) {
                    completedSubjects++;
                }
            }
            
            // Update KPI cards
            document.getElementById('actual-hours').textContent = totalActualHours;
            document.getElementById('planned-hours').textContent = totalPlannedHours;
            
            const overallProgress = totalTopics > 0 ? Math.round((completedTopics / totalTopics) * 100) : 0;
            document.getElementById('overall-progress').textContent = `${overallProgress}%`;
            
            document.getElementById('subjects-completed').textContent = completedSubjects;
            document.getElementById('topics-completed').textContent = completedTopics;
            
            // Update progress chart
            updateProgressChart(filter, completedTopics, totalTopics, completedSubtopics, totalSubtopics);
        }
        
        function updateProgressChart(filter, completedTopics, totalTopics, completedSubtopics, totalSubtopics) {
            const ctx = document.getElementById('progress-chart').getContext('2d');
            
            // Destroy previous chart if it exists
            if (progressChart) {
                progressChart.destroy();
            }
            
            const subjectName = filter === 'all' ? 'All Subjects' : syllabusData[filter]?.name || 'Selected Subject';
            
            progressChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Completed', 'Remaining'],
                    datasets: [{
                        data: [completedTopics, totalTopics - completedTopics],
                        backgroundColor: ['#2ecc71', '#ecf0f1'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: `${subjectName} - Topics Progress`,
                            font: {
                                size: 16
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    label += context.raw;
                                    return label;
                                }
                            }
                        }
                    },
                    cutout: '70%',
                }
            });
        }
        
        // Subjects Page Functions
        function loadSubjectContent() {
            const selectedSubject = subjectSelect.value;
            let contentHTML = '';
            
            if (selectedSubject === 'all') {
                // Show all subjects
                for (const subjectId in syllabusData) {
                    contentHTML += renderSubject(subjectId, syllabusData[subjectId]);
                }
            } else {
                // Show selected subject
                contentHTML = renderSubject(selectedSubject, syllabusData[selectedSubject]);
            }
            
            subjectContent.innerHTML = contentHTML;
            
            // Add event listeners to topic headers
            document.querySelectorAll('.topic-header').forEach(header => {
                header.addEventListener('click', function() {
                    const subtopicList = this.nextElementSibling;
                    subtopicList.classList.toggle('expanded');
                });
            });
            
            // Add event listeners to completion checkboxes
            document.querySelectorAll('.completion-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const subjectId = this.getAttribute('data-subject');
                    const topicName = this.getAttribute('data-topic');
                    const subtopicName = this.getAttribute('data-subtopic');
                    const completed = this.checked;
                    
                    const timeInput = document.getElementById(`time-${subjectId}-${topicName}-${subtopicName}`);
                    const actualTime = completed ? parseInt(timeInput.value) || 0 : 0;
                    
                    updateSubtopicsProgress(subjectId, topicName, subtopicName, completed, actualTime);
                });
            });
            
            // Add event listeners to time inputs
            document.querySelectorAll('.time-input').forEach(input => {
                input.addEventListener('change', function() {
                    const subjectId = this.getAttribute('data-subject');
                    const topicName = this.getAttribute('data-topic');
                    const subtopicName = this.getAttribute('data-subtopic');
                    
                    const checkbox = document.getElementById(`checkbox-${subjectId}-${topicName}-${subtopicName}`);
                    if (checkbox.checked) {
                        const actualTime = parseInt(this.value) || 0;
                        updateSubtopicsProgress(subjectId, topicName, subtopicName, true, actualTime);
                    }
                });
            });
        }
        
        function renderSubject(subjectId, subjectData) {
            let html = `<div class="subject-content">
                <h3>${subjectData.name}</h3>
                <div class="topic-list">`;
            
            subjectData.topics.forEach(topic => {
                // Check if topic is completed
                let topicCompleted = false;
                if (userProgress && userProgress.subjects[subjectId] && userProgress.subjects[subjectId].topics[topic.name]) {
                    topicCompleted = userProgress.subjects[subjectId].topics[topic.name].completed || false;
                }
                
                html += `<div class="topic-item">
                    <div class="topic-header">
                        <div class="topic-title">
                            <i class="fas fa-chevron-right" style="margin-right: 8px; transition: transform 0.3s;"></i>
                            ${topic.name}
                            ${topicCompleted ? '<span class="status-complete" style="margin-left: 10px;"><i class="fas fa-check-circle"></i> Completed</span>' : ''}
                        </div>
                        <div style="display: flex; gap: 10px; align-items: center;">
                            <span class="topic-priority priority-${topic.priority}">Priority ${topic.priority}</span>
                            <span class="topic-weightage">${topic.weightage}</span>
                        </div>
                    </div>
                    <div class="subtopic-list">
                        ${topic.subtopics.map(subtopic => {
                            // Check if subtopic is completed
                            let subtopicCompleted = false;
                            let actualTime = 0;
                            if (userProgress && userProgress.subjects[subjectId] && 
                                userProgress.subjects[subjectId].topics[topic.name] &&
                                userProgress.subjects[subjectId].topics[topic.name].subtopics[subtopic.name]) {
                                subtopicCompleted = userProgress.subjects[subjectId].topics[topic.name].subtopics[subtopic.name].completed || false;
                                actualTime = userProgress.subjects[subjectId].topics[topic.name].subtopics[subtopic.name].actualTime || 0;
                            }
                            
                            return `<div class="subtopic-item">
                                <div class="subtopic-info">
                                    <div class="subtopic-name">${subtopic.name}</div>
                                    <div class="subtopic-details">
                                        <span>Planned: ${subtopic.time} hrs</span>
                                        ${subtopicCompleted ? '<span class="status-complete"><i class="fas fa-check"></i> Completed</span>' : ''}
                                    </div>
                                </div>
                                <div class="subtopic-actions">
                                    <div class="time-info">
                                        <div class="planned-time">${subtopic.time} hrs planned</div>
                                        <div class="actual-time">
                                            <input type="number" 
                                                   id="time-${subjectId}-${topic.name}-${subtopic.name}"
                                                   class="time-input"
                                                   data-subject="${subjectId}"
                                                   data-topic="${topic.name}"
                                                   data-subtopic="${subtopic.name}"
                                                   value="${actualTime}"
                                                   min="0" 
                                                   placeholder="Actual">
                                            <span>hrs</span>
                                        </div>
                                    </div>
                                    <input type="checkbox" 
                                           id="checkbox-${subjectId}-${topic.name}-${subtopic.name}"
                                           class="completion-checkbox"
                                           data-subject="${subjectId}"
                                           data-topic="${topic.name}"
                                           data-subtopic="${subtopic.name}"
                                           ${subtopicCompleted ? 'checked' : ''}>
                                </div>
                            </div>`;
                        }).join('')}
                    </div>
                </div>`;
            });
            
            html += `</div></div>`;
            return html;
        }
        
        // Video Functions
        function loadVideos() {
            if (!currentUser) return;
            
            const videosList = document.getElementById('videos-list');
            videosList.innerHTML = '<p>Loading videos...</p>';
            
            db.collection('videos')
                .where('addedBy', '==', currentUser.uid)
                .get()
                .then((querySnapshot) => {
                    if (querySnapshot.empty) {
                        videosList.innerHTML = '<p>No videos added yet. Add your first video!</p>';
                        return;
                    }
                    
                    let videosHTML = '';
                    querySnapshot.forEach((doc) => {
                        const video = doc.data();
                        const subjectName = getSubjectName(video.subject);
                        
                        videosHTML += `<div class="resource-item">
                            <div class="resource-info">
                                <h4>${video.title}</h4>
                                <div class="resource-subject">${subjectName}</div>
                                <div class="resource-link">${video.link}</div>
                            </div>
                            <div class="resource-actions">
                                <a href="${video.link}" target="_blank" class="resource-btn">
                                    <i class="fas fa-play"></i>
                                </a>
                                <a href="#" class="resource-btn delete-video" data-id="${doc.id}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>`;
                    });
                    
                    videosList.innerHTML = videosHTML;
                    
                    // Add event listeners to delete buttons
                    document.querySelectorAll('.delete-video').forEach(btn => {
                        btn.addEventListener('click', function(e) {
                            e.preventDefault();
                            const videoId = this.getAttribute('data-id');
                            deleteVideo(videoId);
                        });
                    });
                })
                .catch((error) => {
                    console.error("Error loading videos:", error);
                    videosList.innerHTML = '<p>Error loading videos. Please try again.</p>';
                });
        }
        
        function addVideo() {
            if (!currentUser) return;
            
            const title = document.getElementById('video-title').value;
            const subject = document.getElementById('video-subject').value;
            const link = document.getElementById('video-link').value;
            const messageDiv = document.getElementById('video-message');
            
            if (!title || !link) {
                showMessage(messageDiv, 'Please fill in title and link', 'error');
                return;
            }
            
            db.collection('videos').add({
                title: title,
                subject: subject,
                link: link,
                addedBy: currentUser.uid,
                addedAt: firebase.firestore.FieldValue.serverTimestamp()
            })
            .then(() => {
                showMessage(messageDiv, 'Video added successfully!', 'success');
                document.getElementById('video-title').value = '';
                document.getElementById('video-link').value = '';
                loadVideos();
            })
            .catch((error) => {
                showMessage(messageDiv, 'Error adding video: ' + error.message, 'error');
            });
        }
        
        function deleteVideo(videoId) {
            if (!currentUser) return;
            
            db.collection('videos').doc(videoId).delete()
                .then(() => {
                    loadVideos();
                })
                .catch((error) => {
                    console.error("Error deleting video:", error);
                });
        }
        
        // Notes Functions
        function loadNotes() {
            if (!currentUser) return;
            
            const notesList = document.getElementById('notes-list');
            notesList.innerHTML = '<p>Loading notes...</p>';
            
            db.collection('notes')
                .where('addedBy', '==', currentUser.uid)
                .get()
                .then((querySnapshot) => {
                    if (querySnapshot.empty) {
                        notesList.innerHTML = '<p>No notes added yet. Add your first notes!</p>';
                        return;
                    }
                    
                    let notesHTML = '';
                    querySnapshot.forEach((doc) => {
                        const note = doc.data();
                        const subjectName = getSubjectName(note.subject);
                        
                        notesHTML += `<div class="resource-item">
                            <div class="resource-info">
                                <h4>${note.title}</h4>
                                <div class="resource-subject">${subjectName}</div>
                                <div class="resource-link">${note.link}</div>
                            </div>
                            <div class="resource-actions">
                                <a href="${note.link}" target="_blank" class="resource-btn">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                                <a href="#" class="resource-btn delete-note" data-id="${doc.id}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>`;
                    });
                    
                    notesList.innerHTML = notesHTML;
                    
                    // Add event listeners to delete buttons
                    document.querySelectorAll('.delete-note').forEach(btn => {
                        btn.addEventListener('click', function(e) {
                            e.preventDefault();
                            const noteId = this.getAttribute('data-id');
                            deleteNote(noteId);
                        });
                    });
                })
                .catch((error) => {
                    console.error("Error loading notes:", error);
                    notesList.innerHTML = '<p>Error loading notes. Please try again.</p>';
                });
        }
        
        function addNotes() {
            if (!currentUser) return;
            
            const title = document.getElementById('notes-title').value;
            const subject = document.getElementById('notes-subject').value;
            const link = document.getElementById('notes-link').value;
            const messageDiv = document.getElementById('notes-message');
            
            if (!title || !link) {
                showMessage(messageDiv, 'Please fill in title and link', 'error');
                return;
            }
            
            db.collection('notes').add({
                title: title,
                subject: subject,
                link: link,
                addedBy: currentUser.uid,
                addedAt: firebase.firestore.FieldValue.serverTimestamp()
            })
            .then(() => {
                showMessage(messageDiv, 'Notes added successfully!', 'success');
                document.getElementById('notes-title').value = '';
                document.getElementById('notes-link').value = '';
                loadNotes();
            })
            .catch((error) => {
                showMessage(messageDiv, 'Error adding notes: ' + error.message, 'error');
            });
        }
        
        function deleteNote(noteId) {
            if (!currentUser) return;
            
            db.collection('notes').doc(noteId).delete()
                .then(() => {
                    loadNotes();
                })
                .catch((error) => {
                    console.error("Error deleting note:", error);
                });
        }
        
        // Helper Functions
        function getSubjectName(subjectId) {
            const subjectMap = {
                'paper1': 'Paper 1: FR',
                'paper2': 'Paper 2: AFM',
                'paper3': 'Paper 3: Audit',
                'paper4': 'Paper 4: DT',
                'paper5': 'Paper 5: IDT',
                'paper6': 'Paper 6: IBS',
                'general': 'General'
            };
            
            return subjectMap[subjectId] || subjectId;
        }
        
        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            // Check if user is already logged in
            // This is handled by onAuthStateChanged
            
            // Set up video and notes forms
            document.getElementById('add-video-btn')?.addEventListener('click', addVideo);
            document.getElementById('add-notes-btn')?.addEventListener('click', addNotes);
            
            // Load initial content if user is already logged in
            if (currentUser) {
                loadUserProgress();
            }
        });
    </script>
</body>
</html>
